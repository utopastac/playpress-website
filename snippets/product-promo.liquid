{{ 'product-promo.css' | asset_url | stylesheet_tag }}

<div is="product-promo" class="product-item" data-id="{{ product.variants.first.id }}">
  <a href="{{ product.url }}" >
    <img
      alt="{{ product.featured_image.alt }}"
      src="{{ product.featured_media | img_url: '600x' }}"
      loading="lazy"
      width="600"
      height="400"
    />
  </a>
  <div>
    <a href="{{ product.url }}" >
      <h3>{{ product.title }}</h3>
    </a>
    <div>
      <p>{{ product.price | money }}</p>
      <form method="post" action="/cart/add">
        <input type="hidden" name="id" value="{{ product.variants.first.id }}" />
        <input type="hidden" min="1" type="number" id="quantity" name="quantity" value="1"/>
        <button type="submit" value="Add" class="add-to-cart">Add</button>
      </form>
    </div>
  </div>
  {%- if product.metafields.product.is_new == true -%}
    <div class="new">New</div>
  {%- endif -%}
</div>
