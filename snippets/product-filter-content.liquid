<div class="filter-group">
  <h5>Collection</h5>
  <div class="collection-checkboxes">
    {%- assign collections_array = all_collections | split: ',' -%}
    {%- for collection_handle in collections_array -%}
      {%- assign filter_collection = collections[collection_handle] -%}
      {%- if filter_collection -%}
        <div class="collection-checkbox-item">
          {%- if id_prefix != '' -%}
            <input type="radio" id="filter-collection-{{ id_prefix }}-{{ collection_handle }}" name="collection-filter" value="{{ collection_handle }}" data-collection-handle="{{ collection_handle }}">
            <label for="filter-collection-{{ id_prefix }}-{{ collection_handle }}">
              <span class="label-text">{{ filter_collection.title }}</span>
              <span class="filter-count" data-collection-handle="{{ collection_handle }}"></span>
            </label>
          {%- else -%}
            <input type="radio" id="filter-collection-{{ collection_handle }}" name="collection-filter" value="{{ collection_handle }}" data-collection-handle="{{ collection_handle }}">
            <label for="filter-collection-{{ collection_handle }}">
              <span class="label-text">{{ filter_collection.title }}</span>
              <span class="filter-count" data-collection-handle="{{ collection_handle }}"></span>
            </label>
          {%- endif -%}
        </div>
      {%- endif -%}
    {%- endfor -%}
  </div>
</div>
