<div is="hero-content" class="{% if section.settings.is_dark %}dark{% endif %}">
  <div>
    {% if section.settings.subtitle != blank %}
      <h4 style="{% if section.settings.is_text_color %}color: {{ section.settings.text_color }} !important{% endif %}">{{ section.settings.subtitle | escape }}</h4>
    {% endif %}
    <h1 style="{% if section.settings.is_text_color %}color: {{ section.settings.text_color }} !important{% endif %}">{{ section.settings.heading | escape }}</h1>
    {%- if section.settings.text != blank -%}
      <p style="{% if section.settings.is_text_color %}color: {{ section.settings.text_color }} !important{% endif %}">{{ section.settings.text }}</p>
    {%- endif -%}
  </div>
  {%- if section.settings.link_url != blank -%}
    <div is="button">{{ section.settings.link_text }}</div>
  {%- endif -%}
</div>
