{{ 'delivery.js' | asset_url | script_tag }}
{{ 'delivery.css' | asset_url | stylesheet_tag }}

<div is="delivery" id="delivery">
  <header>
    <div class="icon delivery"></div>
    <span>Worldwide delivery - free within UK</span>
    {% comment %} <div class="icon plus"></div> {% endcomment %}
  </header>
  <div is="delivery-content">
    <h3>Free delivery for all orders within the UK</h3>
    <p>Delivery to the UK will normally be made within 1- 2 working days after your order is accepted.</p>
    <p>Parcels are shipped via Royal Mail and are delivered Monday to Saturday, excluding Bank Holidays.</p>

    <h3>Delivery to the rest of the world</h3>
    <p>Delivery to the rest of the World will normally be made within 5- 10 working days after your order is accepted.</p>
    
    <div is="delivery-charges">
      <h4>Delivery charges</h4>
      <table>
        <tr>
          <td>Within the UK</td>
          <td><strong>Free</strong></td>
        </tr>
        <tr>
          <td>Channel Islands and rest of Europe</td>
          <td><strong>£7.80</strong></td>
        </tr>
        <tr>
          <td>North America</td>
          <td><strong>£14.85</strong></td>
        </tr>
        <tr>
          <td>Rest of the World</td>
          <td><strong>£17.60</strong></td>
        </tr>
      </table>
    </div>

  </div>
</div>
