{{ 'product-sorting.js' | asset_url | script_tag }}
{{ 'product-promos.css' | asset_url | stylesheet_tag }}

<section is="section">
  
  {% render 'section-header', title: section.settings.title, text: section.settings.text %}

  {%- assign collection = collections[section.settings.collection] -%}
  {% assign products = collection.products %}
  {%- assign product_limit = section.settings.grid | times: section.settings.rows -%}

  {%- comment -%} Collect all unique collections, age ranges, and price range for filtering {%- endcomment -%}
  {%- if section.settings.show_filtering_options -%}
    {%- assign excluded_collections_string = section.settings.excluded_collections | strip -%}
    {%- assign excluded_collections = excluded_collections_string | split: ',' -%}
    {%- assign all_collections = '' -%}
    {%- assign all_age_ranges = '' -%}
    {%- assign min_price = 999999 -%}
    {%- assign max_price = 0 -%}
    {%- for product in products limit: product_limit -%}
      {%- if product.available -%}
        {%- for product_collection in product.collections -%}
          {%- assign should_exclude = false -%}
          {%- if excluded_collections_string != '' -%}
            {%- for excluded_handle in excluded_collections -%}
              {%- assign excluded_handle_trimmed = excluded_handle | strip -%}
              {%- if product_collection.handle == excluded_handle_trimmed -%}
                {%- assign should_exclude = true -%}
                {%- break -%}
              {%- endif -%}
            {%- endfor -%}
          {%- endif -%}
          {%- unless all_collections contains product_collection.handle or should_exclude -%}
            {%- if all_collections == '' -%}
              {%- assign all_collections = product_collection.handle -%}
            {%- else -%}
              {%- assign all_collections = all_collections | append: ',' | append: product_collection.handle -%}
            {%- endif -%}
          {%- endunless -%}
        {%- endfor -%}
        {%- if product.metafields.product.age_range != blank -%}
          {%- assign age_range = product.metafields.product.age_range | strip -%}
          {%- unless all_age_ranges contains age_range -%}
            {%- if all_age_ranges == '' -%}
              {%- assign all_age_ranges = age_range -%}
            {%- else -%}
              {%- assign all_age_ranges = all_age_ranges | append: ',' | append: age_range -%}
            {%- endif -%}
          {%- endunless -%}
        {%- endif -%}
        {%- assign product_price_num = product.price | money_without_currency | remove: ',' | times: 1 -%}
        {%- if product_price_num < min_price -%}
          {%- assign min_price = product_price_num -%}
        {%- endif -%}
        {%- if product_price_num > max_price -%}
          {%- assign max_price = product_price_num -%}
        {%- endif -%}
      {%- endif -%}
    {%- endfor -%}
  {%- endif -%}

  <div class="product-layout-wrapper">
    {% if section.settings.show_filtering_options %}
      <div id="filter-modal" class="filter-modal">
        <header>
          <div class="header-title">
            <h2>Filter Products</h2>
          </div>
          <div id="filter-modal-close" class="filter-close">
            <div class="icon close"></div>
          </div>
        </header>
        <div class="filter-content">
          {% render 'product-filter-content', all_collections: all_collections, all_age_ranges: all_age_ranges, id_prefix: '' %}
        </div>
        <footer>
          <button id="filter-modal-apply" class="filter-apply-button" type="button">
            Apply filters
          </button>
        </footer>
      </div>

    {% endif %}

    <div class="product-controls">
      {% if section.settings.show_filtering_options %}
        <div class="product-search-controls">
          <input type="text" class="filter-input filter-keyword-input" placeholder="Search">
        </div>
        <div class="product-filter-controls">
          <button id="filter-toggle" class="filter-toggle-button" type="button">
            Filters
          </button>
        </div>
      {% endif %}
  {% if section.settings.show_sorting_options %}
    <div class="product-sorting">
      <select id="sort-by" class="sort-by-select">
        <option value="featured">Sort: Featured</option>
        <option value="created-descending">Sort: Newest</option>
        <option value="price-ascending">Sort: Price: Low to High</option>
        <option value="price-descending">Sort: Price: High to Low</option>
        <option value="title-ascending">Sort: Alphabetical: A-Z</option>
        <option value="title-descending">Sort: Alphabetical: Z-A</option>
      </select>
    </div>
  {% endif %}
    </div>

    <div class="product-grid-wrapper">
      {% if section.settings.show_filtering_options %}
        <div id="filter-sidebar" class="filter-sidebar">
          <div class="filter-content">
            {% render 'product-filter-content', all_collections: all_collections, all_age_ranges: all_age_ranges, id_prefix: 'sidebar' %}
          </div>
        </div>
      {% endif %}

      <div class="product-content-wrapper">
  <div is="product-promos" class="product-promos-container">
    <div class="product-grid">
      {% for product in products limit: product_limit %}
        {%- if product.available -%}
          {% render 'product-promo', product: product %}
        {%- endif -%}
      {% endfor %}
          </div>
        </div>
      </div>
    </div>
  </div>

  {% render 'signpost', section: section, button: true, center: true %}

</section>

{% schema %}
{
  "name": "Product promos",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Add a title"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Text",
      "info": "Optional"
    },
    {
      "id": "collection",
      "type": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "grid",
      "label": "Products per row",
      "min": 2,
      "max": 5,
      "step": 1,
      "default": 3
    },
    {
      "type": "range",
      "id": "rows",
      "label": "Rows",
      "min": 1,
      "max": 20,
      "step": 1,
      "default": 2
    },
    {
      "type": "checkbox",
      "id": "show_signpost_link",
      "label": "Show 'View all' link",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show_sorting_options",
      "label": "Show Sort options",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show_filtering_options",
      "label": "Show Filter options",
      "default": false
    },
    {
      "type": "text",
      "id": "excluded_collections",
      "label": "Excluded Collections",
      "info": "Comma-separated list of collection handles to exclude from the filter (e.g., 'all,frontpage')"
    },
    {
      "type": "text",
      "id": "link_text",
      "label": "Link text",
      "default": "View all"
    },
    {
      "type": "url",
      "id": "link_url",
      "label": "Link URL"
    }
  ],
  "presets": [
    {
      "name": "Product promos"
    }
  ]
}
{% endschema %}
