{{ 'logos.css' | asset_url | stylesheet_tag }}

<section is="logos" class="{% if section.settings.show_colour == true %}alternative{% endif %}{% if section.settings.no_top_padding == true %} no-top-padding{% endif %}">
  
  {% render 'section-header', title: section.settings.title, text: section.settings.text %}

  {% comment %} {% if section.settings.title_secondary != blank %}
    <h3>{{ section.settings.title_secondary | escape }}</h3>
  {% endif %} {% endcomment %}
  <div>
    {% if section.blocks.size > 0 %}
      <ul>
        {% for block in section.blocks %}
          <li>
            {% if block.settings.link != blank %}
              <a href="{{ block.settings.link }}">
            {% endif %}
            {% if block.settings.image != blank %}
              <img
                src="{{ block.settings.image | img_url: '400x400' }}"
                class="{{ block.settings.image_size }}"
                alt="{{ block.settings.image.alt }}"
                loading="lazy"
                width="{{block.settings.image.width}}"
                height="{{block.settings.image.height}}"
                />
            {% else %}
              {{ 'logo' | placeholder_svg_tag: 'placeholder-svg' }}
            {% endif %}
            {% if block.settings.link != blank %}
              </a>
            {% endif %}
          </li>
        {% endfor %}
      </ul>
    {% endif %}

    {% if section.blocks.size == 0 %}
      {% render 'no-blocks' %}
    {% endif %}

    {% render 'signpost', section: section %}
  
  </div>
</section>

{% schema %}
{
  "name": "Logos",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Add a title",
      "info": "Optional"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Text",
      "info": "Optional"
    },
    {
      "type": "text",
      "id": "title_secondary",
      "label": "Secondary heading",
      "info": "Optional"
    },
    {
      "type": "checkbox",
      "id": "show_signpost_link",
      "label": "Show 'view more' link",
      "default": false
    },
    {
      "type": "text",
      "id": "link_text",
      "label": "Link text",
      "default": "View more",
      "info": "Optional"
    },
    {
      "type": "url",
      "id": "link_url",
      "label": "Link URL",
      "info": "Optional"
    },
    {
      "type": "checkbox",
      "id": "no_top_padding",
      "label": "Remove top spacing",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show_colour",
      "label": "Show background colour",
      "default": false
    }
  ],
  "blocks": [
    {
      "type": "logo",
      "name": "Logo",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link",
          "info": "Optional"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Logos",
      "blocks": [
        {
          "type": "logo"
        },
        {
          "type": "logo"
        },
        {
          "type": "logo"
        },
        {
          "type": "logo"
        }
      ]
    }
  ]
}
{% endschema %}
