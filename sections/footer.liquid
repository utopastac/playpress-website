{{ 'footer.css' | asset_url | stylesheet_tag }}

<footer is="footer" role="contentinfo">
  <div>
    <div is="playpress-pete">
      <img 
        src="{{ 'playpress_pete.svg' | asset_url }}"
        alt="Playpress Pete, our mascot in a sticker"
        loading="lazy"
        width="400"
        height="400"
      />
    </div>
    <section is="main-links">
      <div is="logo">
        <img 
          src="{{ 'logo-no-r.svg' | asset_url }}"
          alt="Playpress logo"
          loading="lazy"
          width="600"
          height="400"
        />
      </div>
      <ul is="main-link-list">
        {% for link in linklists.main-menu.links %}
            <li>
              <a href="{{ link.url }}">{{ link.title }}</a>
            </li>
        {% endfor %}
      </ul>
      {% comment %} <ul>
        <h2>Our collections</h2>
        {% for collection in collections %}
          {% if collection.products_count > 0 %}
            <li>
              <a is="collection-link" href="{{ collection.url }}">
                <p>{{ collection.title }}</p>
                <span>{{ collection.products_count }} products</span>
              </a>
            </li>
          {% endif %}
        {% endfor %}
      </ul> {% endcomment %}
      <ul>
        <h2>Our collections</h2>
        {% for link in linklists.collections.links %}
          <li>
            <a is="collection-link" href="{{ link.url }}">
              <p>{{ link.title }}</p>
            </a>
          </li>
      {% endfor %}
      </ul>
      <ul>
        <h2>Our best-selling sets</h2>
        {% for product in collections['best-sellers'].products limit: 3 %}
          <li>
            <a is="product-link" href="{{ product.url }}">
              <img
                alt="{{ product.featured_image.alt }}"
                src="{{ product.featured_media | img_url: '400x' }}"
                loading="lazy"
                width="400"
                height="200"
              />
              <div>
                <p>{{ product.title }}</p>
                <span>{{ product.price | money }}</span>
              </div>
            </a>
          </li>
        {% endfor %}
      </ul>
    </section>
    <section is="meta">
      <div>
        <ul>
          {% for link in linklists[section.settings.footer_linklist].links %}
            <li {% if link.active %} class="on"{% endif %}>
              <a href="{{ link.url }}" class="{% if link.active %} active{% endif %}">
                {{ link.title }}
              </a>
            </li>
          {% endfor %}
        </ul>
        {% comment %} <dark-mode-toggle id="dark-mode-toggle" label="Dark mode"></dark-mode-toggle> {% endcomment %}
        {%- if section.blocks.size > 0 -%}
          <ul>
            {%- for block in section.blocks -%}
              <li {{ block.shopify_attributes }}>
