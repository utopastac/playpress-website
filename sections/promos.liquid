{{ 'promos.css' | asset_url | stylesheet_tag }}

<section is="section">

  {% include 'section-header' %}

  {% case section.settings.grid %}
    {% when 2 %}
      {%- assign grid_row = 'two' -%}
    {% when 3 %}
      {%- assign grid_row = 'three' -%}
    {% when 4 %}
      {%- assign grid_row = 'four' -%}
  {% endcase %}

  <div is="promos" class="{{ grid_row }}">
    <div>
      {% for block in section.blocks %}
        <a is="promo" href="{{ block.settings.link_url }}">
          {% if block.settings.title != blank %}
            <h3>{{ block.settings.title | escape }}</h3>
          {% endif %}
          {% if block.settings.text != blank %}
            <p>{{ block.settings.text }}</p>
          {% endif %}
        </a>
      {% endfor %}

      {% if section.blocks.size == 0 %}
        {% include 'no-blocks' %}
      {% endif %}
    </div>
  </div>

</section>

{% schema %}
{
  "name": "Promos",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Add a heading"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Text"
    },
    {
      "type": "range",
      "id": "grid",
      "label": "Features per row",
      "min": 2,
      "max": 4,
      "step": 1,
      "default": 2
    }
  ],
  "blocks": [
    {
      "type": "promo",
      "name": "Promo",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Heading",
          "default": "Add a title"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Add descriptve text"
        },
        {
          "type": "url",
          "id": "link_url",
          "label": "Link URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Promos",
      "blocks": [
        {
          "type": "promo"
        },
        {
          "type": "promo"
        }
      ]
    }
  ]
}
{% endschema %}
