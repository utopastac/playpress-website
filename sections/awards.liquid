{{ 'awards.css' | asset_url | stylesheet_tag }}

<section is="awards">
  {% for block in section.blocks %}
    <article is="award">
      <div is="gallery">
        {%- if block.settings.image == blank -%}
          {{ "lifestyle-1" | placeholder_svg_tag: "placeholder-svg" }}
        {%- else -%}
          <img
            src="{{ block.settings.image | img_url: 'master' }}"
            alt="{{ block.settings.image.alt }}"
            width="900"
            height="600"
            is="in-action"
            loading="lazy"
          />
        {%- endif -%}
      </div>
      <div is="content">
        <div is="main-content">
          <h4>{{ block.settings.date | escape }} â€¢ {{ block.settings.award | escape }}</h4>
          <h2>{{ block.settings.title | escape }}</h2>
          <p class="{% if block.settings.placing == 'Winner' %}winner{% endif %}">{{ block.settings.placing }}</p>
        </div>
        {%- if block.settings.product != blank -%}
          <a is="product-link" href="{{ block.settings.product.url }}">
            <img
              alt="{{ block.settings.product.featured_image.alt }}"
              src="{{ block.settings.product.featured_media | img_url: '400x' }}"
              loading="lazy"
              width="400"
              height="200"
            />
            <div>
              <p>{{ block.settings.product.title }}</p>
              <span>{{ block.settings.product.price | money }}</span>
            </div>
          </a>
        {%- endif -%}
      </div>
    </article>
  {% endfor %}
</section>

{% schema %}
{
  "name": "Awards",
  "settings": [
  ],
  "blocks": [
    {
      "type": "award_block",
      "name": "Award",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "date",
          "label": "Date",
          "default": "Add a date"
        },
        {
          "type": "text",
          "id": "award",
          "label": "Award Body",
          "default": "Add an award body"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Award title",
          "default": "Add a title"
        },
        {
          "type": "text",
          "id": "placing",
          "label": "Placing",
          "info": "Optional"
        },
        {
          "type": "product",
          "id": "product",
          "label": "Product"      
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Awards",
      "blocks": [
        {
          "type": "award_block"
        },
        {
          "type": "award_block"
        },
        {
          "type": "award_block"
        }
      ]
    }
  ]
}
{% endschema %}
