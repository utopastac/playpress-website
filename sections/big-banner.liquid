{{ 'big-banner.css' | asset_url | stylesheet_tag }}

<section is="big-banner">
  <a href="{{ section.settings.link_url }}">
    <div>
      <div class="banner-content">

        {%- if section.settings.image == blank -%}
          {{ "lifestyle-1" | placeholder_svg_tag: "placeholder-svg" }}
        {%- else -%}
          <img
            src="{{ section.settings.image | img_url: 'master' }}"
            alt="{{ section.settings.image.alt }}"
            width="900"
            height="600"
            is="in-action"
            loading="lazy"
          />
        {%- endif -%}

        {%- if section.settings.background_image == blank -%}
          <div is="hero-content">
        {%- else -%}
          <div is="hero-content" style="background-image: url({{ section.settings.background_image | img_url: 'master' }})">
        {%- endif -%}
          <h2>{{ section.settings.heading | escape }}</h2>
          <h3>{{ section.settings.text }}</h3>
          <div is="button">{{ section.settings.link_text }}</div>
        </div>

        
      </div>
    </div>
  </a>
</section>

{% schema %}
{
  "name": "Big Banner",
  "settings": [
    {
    "id": "heading",
    "type": "text",
    "label": "Heading",
    "default": "Add a title"
    },
    {
      "id": "text",
      "type": "text",
      "label": "Text",
      "default": "Add descriptive text"
    },
    {
      "type": "text",
      "id": "link_text",
      "label": "Link text"
    },
    {
      "type": "url",
      "id": "link_url",
      "label": "Link URL"
    },
    {
      "id": "image",
      "type": "image_picker",
      "label": "Image"
    },
    {
      "id": "background_image",
      "type": "image_picker",
      "label": "Background Image"
    }
  ],
  "presets": [
    {
      "name": "Big Banner"
    }
  ]
}
{% endschema %}
