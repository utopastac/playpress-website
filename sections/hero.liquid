{{ 'hero.css' | asset_url | stylesheet_tag }}

<section is="hero">
  <div>
    {%- if section.settings.image == blank -%}
      {{ "lifestyle-1" | placeholder_svg_tag: "placeholder-svg" }}
    {%- else -%}
      <img
        src="{{ section.settings.image | img_url: 'master' }}"
        alt=""
        width="900"
        height="600"
        is="in-action"
      />
    {%- endif -%}

    {% render 'hero-content', section: section %}
  </div>
</section>

{% schema %}
{
  "name": "Hero",
  "settings": [
    {
    "id": "heading",
    "type": "text",
    "label": "Heading",
    "default": "Add a title"
    },
    {
      "id": "text",
      "type": "text",
      "label": "Text",
      "default": "Add descriptive text"
    },
    {
      "type": "text",
      "id": "link_text",
      "label": "Link text"
    },
    {
      "type": "url",
      "id": "link_url",
      "label": "Link URL"
    },
    {
      "id": "image",
      "type": "image_picker",
      "label": "Image"
    }
  ],
  "presets": [
    {
      "name": "Hero"
    }
  ]
}
{% endschema %}
