{{ 'page-gallery.css' | asset_url | stylesheet_tag }}

<section is="section">

  <div is="page-gallery">
      {% for block in section.blocks %}
        <div>
          <img
            src="{{ block.settings.image }}"
            alt="{{ block.settings.image.alt }}"
            loading="lazy"
          />
        </div>
      {% endfor %}
  </div>

</section>

{% schema %}
{
  "name": "Page gallery",
  "settings": [
  ],
  "blocks": [
    {
      "type": "page_gallery_image",
      "name": "Page gallery image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Page gallery",
      "blocks": [
        {
          "type": "page_gallery_image"
        },
        {
          "type": "page_gallery_image"
        },
        {
          "type": "page_gallery_image"
        },
        {
          "type": "page_gallery_image"
        }
      ]
    }
  ]
}
{% endschema %}
